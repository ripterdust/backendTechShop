
<div class="row container m-auto">

    <div class="col-md-4">

        <a href="/add-category" class="btn btn-block btn-primary mb-3">Add new category</a>

        <div class="card mb-4">

            <div class="card-header text-center">
                Categories
            </div>

            <ul class="list-group list-group-flush">
                {{#each categories }}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span> {{category}} </span>
                    <div class="btns">
                        <a href="/delete-category/{{id}}" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                        <a href="/edit-category/{{id}}" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                    </div>
                </li>
                {{/each}}
            </ul>

        </div>
    </div>

    <div class="col-md-8">
        <a href="/add-product" class="btn btn-block btn-primary mb-3">Add new product</a>

        <div class="card">
            <div class="card-header text-center">Products</div>

            <ul class="list-group list-group-flush">
                {{#each products }}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span> {{ name }} </span>
                    <div class="btns">
                        <a href='/delete-product/{{id}}' class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                        <a href='/edit-product/{{id}}'  class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                    </div>
                </li>
                {{/each}}
            </ul>

        </div>
    </div>
</div>